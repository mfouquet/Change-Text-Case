    {
      "name" : "Chicago Title Case",
      "identifier" : "titlecase",
      "script" : "titlecase.cocoascript",
      "handler" : "changeCaseToChicagoTitleCase",
      "shortcut" : "",
    },
    {
      "name" : "HaCkEr",
      "identifier" : "hackercase",
      "script" : "hacker.cocoascript",
      "handler" : "changeCaseToHacker",
      "shortcut" : "",
    },
  ],
  "menu" : {
    "items" : [
      "uppercase",
      "lowercase",
      "titlecase",
      "hackercase"
    ],
